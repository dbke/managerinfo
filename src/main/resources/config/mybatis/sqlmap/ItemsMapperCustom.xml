<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd" >

  <!--实现业务：物品查询
     sql语句：SELECT * FROM items where items.name like "%实战%"
  -->
       
<!-- namespace=mapper接口地址-->
<mapper namespace="cn.dbke.info.mapper.ItemsMapperCustom">
    <!--定义物品查询条件-->
    <sql id="querywherename">
        <if test="itemsCustom!=null">
            <if test="itemsCustom.name!=null and itemsCustom.name!=''">
                items.name like "%${itemsCustom.name}%"
            </if>
        </if>
    </sql>
    <!--
    parameterType传入包装对象
    resultType使用扩展对象
    -->
    <select id="findItemsByname" parameterType="cn.dbke.info.po.ItemsQueryVo"
            resultType="cn.dbke.info.po.ItemsCustom">
          select * from items
          <where>
              <include refid="querywherename"></include>
          </where>
    </select>
</mapper>